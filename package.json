{
  "name": "baskin",
  "scripts": {
    "docker-up": "npm run docker-up-account && npm run docker-up-category && npm run docker-up-userapp",
    "docker-up-account": "cd AccountService && docker-compose up -d",
    "docker-up-category": "cd CategoryService && docker-compose up -d",
    "docker-up-userapp": "cd UserApp && docker-compose up -d",
    "docker-down": "npm run docker-down-account && npm run docker-down-category && npm run docker-down-userapp",
    "docker-down-account": "cd AccountService && docker-compose down",
    "docker-down-category": "cd CategoryService && docker-compose down",
    "docker-down-userapp": "cd UserApp && docker-compose down", 
    "cis": "npm ci && npm run ci-account && npm run ci-image && npm run ci-category && npm run ci-userapp",
    "ci-account": "cd AccountService && npm ci",
    "ci-image": "cd ImageService && npm ci",
    "ci-category": "cd CategoryService && npm ci",
    "ci-userapp": "cd UserApp && npm ci",
    "lints": "npm run lint-account && npm run lint-image && npm run lint-category && npm run lint-userapp",
    "lint-account": "cd AccountService && npm run lint",
    "lint-image": "cd ImageService && npm run lint",
    "lint-category": "cd CategoryService && npm run lint",
    "lint-userapp": "cd UserApp && npm run lint",
    "tests": "npm run test-account && npm run test-image && npm run test-category && npm run test-userapp",
    "test-account": "cd AccountService && npm test",
    "test-image": "cd ImageService && npm test",
    "test-category": "cd CategoryService && npm test",
    "test-userapp": "cd UserApp && npm run test:silent",
    "dev": "concurrently --kill-others \"npm run account\" \"npm run image\" \"npm run category\" \"npm run userapp\"",
    "account": "cd AccountService && npm run dev",
    "image": "cd ImageService && npm run dev",
    "category": "cd CategoryService && npm run dev",
    "userapp": "cd UserApp && npm run dev"
  },
  "devDependencies": {
    "eslint-config-typescript": "*",
    "concurrently": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jorahty/baskin.git"
  },
  "bugs": {
    "url": "https://github.com/jorahty/baskin/issues"
  },
  "homepage": "https://github.com/jorahty/baskin#readme"
}
