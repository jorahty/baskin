{
  "name": "baskin-microservice-image",
  "devDependencies": {
    "@types/express": "*",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "*",
    "@types/node": "*",
    "@types/supertest": "*",
    "eslint": "*",
    "jest": "*",
    "nodemon": "*",
    "supertest": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "express": "*",
    "express-fileupload": "^1.4.0",
    "swagger-ui-express": "^4.6.1"
  },
  "scripts": {
    "dev": "nodemon",
    "test": "jest --coverage",
    "lint": "eslint ./src/**.[jt]s --fix"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "api"
    ],
    "ext": "*",
    "exec": "ts-node src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 500,
    "collectCoverageFrom": [
      "src/**/*.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "src/server.[jt]s"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "build"
    ]
  }
}
