{
  "name": "baskin-microservice-image",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "*",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "*",
    "@types/node": "*",
    "@types/pg": "^8.6.6",
    "@types/supertest": "*",
    "@types/swagger-ui-express": "^4.1.3",
    "eslint": "*",
    "jest": "*",
    "nodemon": "*",
    "supertest": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "*",
    "dotenv": "*",
    "express-fileupload": "^1.4.0",
    "pg": "^8.9.0",
    "swagger-ui-express": "^4.6.1",
    "tsoa": "^5.1.1"
  },
  "scripts": {
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "test": "jest --coverage",
    "prebuild": "npm run swagger",
    "lint": "eslint ./src/**.[jt]s --fix",
    "swagger": "tsoa spec-and-routes"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "api"
    ],
    "ext": "*",
    "exec": "ts-node src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 500,
    "collectCoverageFrom": [
      "src/**/*.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "src/server.[jt]s"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "build"
    ]
  }
}
